---
const { id, header, level = 2 } = Astro.props;
---

<section id={id} class="px-4 py-8 md:py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
  {
    level === 2 ? (
      <h2 class="text-4xl md:text-5xl font-bold font-heading mb-4">{header}</h2>
    ) : (
      <h3 class="text-2xl md:text-3xl font-bold font-heading mb-4">{header}</h3>
    )
  }
  <slot />
</section>
